<%- include('./partials/header') %>
<main>
    <div class="container-fluid">
        <h1 class="text-center mb-4">PERSONAGENS</h1>

        <!-- Cards -->
        <div class="row">
            <% personagens.forEach((personagem, index) => { %>
                <div class="col-md-4 mb-4 d-flex justify-content-center"> <!-- Centraliza os cards -->
                    <div class="card">
                        <img src="/img/lobo.png" class="card-img-top" alt="<%= personagem.nome %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= personagem.nome %></h5>
                            <p class="card-text"><%= personagem.descricao %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>

    </div>
</main>

  <footer>
      <%- include('./partials/footer') %>
  </footer>
